<h1>Users#show</h1>
<p> Username: <%= @user.username %><br />
Email: <%= @user.email %><br />
Wins: <%= @user.wins %><br />
Losses: <%= @user.losses %><br />
Silver: <%= @user.silver %><br /></p>

<% if current_user == @user %>
	<%= link_to 'Edit', edit_user_path(@user) %>
	<%= link_to "Delete User", @user, :confirm => "Are you sure you want to delete this user?", :method => :delete %>
<% end %>
