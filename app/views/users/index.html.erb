<h1> This is the user index page </h1>

<table>
    <tr>
    	<th>username</th>
    </tr>

	<% @users.each do |user| %>
	  	<tr>
			<td><%= user.username %></td>
		    <td><%= link_to 'Show', user %></td>
		    <% if current_user? %>
		    <td><%= link_to 'Edit', edit_user_path(user) %></td>
		    <td><%= link_to "Delete User", user, :confirm => "Are you sure you want to delete this user?", :method => :delete %></td>
		    <% end %>
		</tr>
	<% end %>
</table>